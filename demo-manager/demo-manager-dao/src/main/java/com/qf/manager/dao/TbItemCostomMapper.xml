<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.qf.manager.dao.TbItemCostomMapper">
    <!--<sql id="Base_Column_List" >
      id, title, sell_point as sellPoint, price, num, barcode, image, cid, status, created, updated
    </sql>-->
    <sql id="Base_Column_List">
    i.id, i.title, i.sell_point as sellPoint, i.price, i.num, i.barcode, i.image, i.cid, i.status, i.created, i.updated,c.name as catName
  </sql>
    <sql id="Where_Column">
        <where>
            i.status != 3
            <if test="itemQuery != null and itemQuery.title != null and itemQuery.title != ''">
                and i.title like '%${itemQuery.title}%'
            </if>
        </where>
    </sql>

    <select id="countItems" resultType="_long">
        SELECT COUNT(*) FROM tb_item i
        <include refid="Where_Column"/>
    </select>

    <!--<select id="showItemByPage" parameterType="com.qf.manager.pojo.dto.PageParam" resultType="com.qf.manager.pojo.po.TbItem">
      select
      <include refid="Base_Column_List" />
      from tb_item
      limit #{offset},#{limit}
    </select>-->
    <select id="showItemByPage" resultType="com.qf.manager.pojo.vo.TbItemCustom">
        select
        <include refid="Base_Column_List"/>
        from tb_item i left join tb_item_cat c
        on i.cid = c.id
        <include refid="Where_Column"/>
        limit #{pageParam.offset},#{pageParam.limit}
    </select>
</mapper>