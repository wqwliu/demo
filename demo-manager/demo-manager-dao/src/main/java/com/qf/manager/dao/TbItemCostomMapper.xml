<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.qf.manager.dao.TbItemCostomMapper" >
  <sql id="Base_Column_List" >
    id, title, sell_point as sellPoint, price, num, barcode, image, cid, status, created, updated
  </sql>

  <select id="countItems" resultType="_long">
     SELECT COUNT(*) FROM tb_item;
  </select>

  <select id="showItemByPage" parameterType="com.qf.manager.pojo.dto.PageParam" resultType="com.qf.manager.pojo.po.TbItem">
    select
    <include refid="Base_Column_List" />
    from tb_item
    limit #{offset},#{limit}
  </select>
</mapper>